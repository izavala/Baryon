@model Forum

<header>
    <form asp-action="Subscribe">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">

            <input type="hidden" asp-for="@Model.FName" asp-value="@Model.FName" />
        </div>
        <button type="submit" class="btn btn-default">Subscribe to @Model.FName</button>
    </form>
    <p class="text-danger">You do not have access to this resource.</p>
</header>
